# Dockerfile.dev - Development Build
# Includes development tools and native libraries for PDF export.

FROM python:3.12-slim

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    SHELL=/bin/bash \
    CODEMARSHAL_HOME=/data \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

# Development tools + WeasyPrint native runtime dependencies.
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    vim \
    nano \
    curl \
    wget \
    ripgrep \
    fd-find \
    tree \
    htop \
    make \
    gcc \
    g++ \
    libcairo2 \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libgdk-pixbuf-2.0-0 \
    shared-mime-info \
    fonts-dejavu-core \
    && rm -rf /var/lib/apt/lists/*

COPY . /app

# Install project in editable mode with development + PDF extras.
RUN python -m pip install --upgrade pip && \
    pip install --no-cache-dir -e ".[dev,export_pdf]"

RUN mkdir -p /data/.codemarshal \
    /data/storage \
    /data/config \
    /data/projects \
    /data/backups \
    /home/developer

RUN useradd -m -s /bin/bash developer && \
    chown -R developer:developer /data /home/developer /app

USER developer

RUN git config --global user.email "developer@codemarshal.local" && \
    git config --global user.name "CodeMarshal Developer"

EXPOSE 8080

VOLUME ["/data", "/app"]

CMD ["/bin/bash"]
